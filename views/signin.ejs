<body class="text-center">

  <main class="form-signin w-100 m-auto">
    <form action="/signin" method="post">
      <i class="fa-solid fa-a"></i>
      <h1 class="h3 mb-3 fw-normal" style="color: #08D9D6;">To-Do</h1>
      <% if(messages.error) {%>
      <%= messages.error %>
      <%}%>
      <div class="form-floating">
        <input style="border-width: medium; border-bottom-width:thin; border-bottom-left-radius:0; border-bottom-right-radius:0; border-color:#71C9CE;" type="text" class="form-control" id="floatingInput" placeholder="Username" autocomplete="off" required="required" name="username">
        <label for="floatingInput" style="font-weight: 600; color:#00ADB5;">Username</label>
      </div>
      <div class="form-floating">
        <input style="border-color:#71C9CE; border-width: medium; border-top-width:thin;" type="password" class="form-control" id="floatingPassword" placeholder="Password" autocomplete="off" required="required" name="password">
        <label for="floatingPassword" style="font-weight: 600; color:#00ADB5;">Password</label>
      </div>

      <!-- <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div> -->
      <button class="w-100 btn btn-lg btn-primary" type="submit" style="background-color: #08D9D6; border:none; margin-top:15px; font-weight: 600;">Sign in</button>
      <p class="mt-5 mb-3 text-muted" style="font-weight: 600;"><a href="/guest" style="color: gray; box-shadow: 2px 2px 10px gray; background-color: #EEEEEE;">Run as Guest</a> or <a href="/signup" style="background-color: #E3FDFD;color: #00ADB5;box-shadow: 2px 2px 10px #08D9D6;">Sign Up Now</a></p>
    </form>
    <a href="/admin"><i class="fa-solid fa-lock"></i></a>
  </main>



</body>

